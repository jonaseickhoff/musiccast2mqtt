{
    "compilerOptions": {
        "outDir": "./lib",
        "allowJs": true,
        "module": "commonjs",
        "target": "ES2017",
        "sourceMap": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "lib/"
    ]
}